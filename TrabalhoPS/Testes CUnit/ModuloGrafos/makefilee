all: program clear
inst: debug clear

debug: grafos_inst.o listas.o D[TESTE]grafos.o
	gcc -g D[TESTE]grafos.o grafos_inst.o listas.o -o DGRF_teste

program: grafos.o listas.o [TESTE]grafos.o
	gcc -g grafos.o listas.o [TESTE]grafos.o -o GRF_teste

[TESTE]grafos.o: grafos.h grafos.c [TESTE]grafos.c
	gcc -c -Wall [TESTE]grafos.c

D[TESTE]grafos.o: grafos_inst.h grafos_inst.c [TESTE]grafos.c
	gcc -c -Wall [TESTE]grafos.c -o D[TESTE]grafos.o

grafos.o: grafos.h grafos.c
	gcc -c -Wall grafos.c

grafos_inst.o: grafos_inst.h grafos_inst.c
	gcc -c -Wall -std=c99 grafos_inst.c

listas.o: listas.h listas.c
	gcc -c -Wall listas.c

clear:
	del *.o || rm *.o